<notes>
<% notes.each do |label, per_file| %>
    <set label="<%= label %>">
<% per_file.each do |file, line_notes| %>
        <file src="<%= file %>">
<% line_notes.sort!{ |a,b| a[0] <=> b[0] } %>
<% line_notes.each do |line, note| %>
            <note line="<%= line %>" type="<%= label %>"><%= h note %></note>
<% end %>
        </file>
<% end %>
    </set>
<% end %>
</notes>
